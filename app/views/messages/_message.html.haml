.Main__messages__wrapper__message
  .Main__messages__wrapper__message__info
    .Main__messages__wrapper__message__info__userName
      = message.user.name
    .Main__messages__wrapper__message__info__createdAt
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .Main__messages__wrapper__message__text
    - if message.content.present?
      %p
        = message.content
    = image_tag message.image.url if message.image.present?